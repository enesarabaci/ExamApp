<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExamApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/exo_medium</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="materialButtonStyle">@style/Base_ButtonStyle</item>
        <item name="cardViewStyle">@style/Base_CardViewStyle</item>
        <item name="themeColor">@color/dark</item>
        <item name="rootBackgroundColor">@color/black</item>
        <item name="fabColor">@color/red</item>
        <item name="effectColor">@color/black</item>
        <item name="headerColor">@color/dark</item>
    </style>

    <style name="Base_CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/dark</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="Base_ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:backgroundTint">@color/teal_700</item>
    </style>

    <style name="ExamRowStyle">
        <item name="android:tint">@color/teal_200</item>
    </style>

    <style name="Base_ToolbarStyle">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.DayNight</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:theme">@style/Base_ToolbarTheme</item>
        <item name="titleTextAppearance">@style/CustomTitleTextAppearance</item>
        <item name="subtitleTextAppearance">@style/CustomSubTitleTextAppearance</item>
    </style>

    <style name="Secondary_ToolbarStyle">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.DayNight</item>
        <item name="android:background">@color/dark</item>
        <item name="android:theme">@style/Secondary_ToolbarTheme</item>
        <item name="titleTextAppearance">@style/CustomTitleTextAppearance</item>
        <item name="subtitleTextAppearance">@style/CustomSubTitleTextAppearance</item>
    </style>

    <style name="Base_ToolbarTheme">
        <item name="textColor">@color/light_grey</item>
        <!-- Color used for the title of the Toolbar - as long as not overridden -->
        <item name="android:textColorPrimary">?textColor</item>
        <!-- Used to color back button and three dots -->
        <item name="android:textColorSecondary">?textColor</item>
    </style>

    <style name="Secondary_ToolbarTheme">
        <item name="textColor">@color/light_grey</item>
        <!-- Color used for the title of the Toolbar - as long as not overridden -->
        <item name="android:textColorPrimary">?textColor</item>
        <!-- Used to color back button and three dots -->
        <item name="android:textColorSecondary">?textColor</item>
    </style>

    <style name="CustomTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/exo_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?textColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomSubTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:fontFamily">@font/exo_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?textColor</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>